@model CalcModel;

<!--Create a form to calculate final grade based on percentages of grade types-->
<h2>Grade Calculator</h2>
<p>Enter in values as percentage scored.</p>
<form method="post">
    <label>Assignments:</label>
    <input id="assignments" asp-for="assignments" /><br />
    <label>Group Project:</label>
    <input id="groupProject" asp-for="groupProject" /><br />
    <label>Quizzes:</label>
    <input id="quizzes" asp-for="quizzes" /><br />
    <label>Exams:</label>
    <input id="exams" asp-for="exams" /><br />
    <label>INTEX:</label>
    <input id="intex" asp-for="intex" /><br />
    <input id="butnSend" type="submit" value="calculate" onclick="totalGradePerc()" />

    <div asp-validation-summary="All"></div>
</form>
<script src="js/Calculator.js"></script>